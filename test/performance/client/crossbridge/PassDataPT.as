         result += bytes[i];            }            return result;         }                public function examineBytesCB():int {                    var bytes:ByteArray = getTestData();            var bufferSize:int = bytes.length;                        var bytesPtr:int = CModule.malloc(bufferSize);            CModule.writeBytes(bytesPtr, bufferSize, bytes);            var result:int = MyLib.examineBytes(bytesPtr, bufferSize);            CModule.free(bytesPtr);                      return result;        }                private static function getTestData():ByteArray {            var bytes:ByteArray = new ByteArray();            bytes.endian = "littleEndian";            for (var j:int = 0; j < 2048; j++)               bytes.writeInt(j);                        bytes.position = 0;            return bytes;        }            }    }